{
    "name": "basic_webserver_template",
    "version": "1.0.0",
    "description": "A basic NodeJS webserver template",
    "scripts": {
        "postinstall": "cd public && npm i",
        "serve": "live-server --host=localhost --port=8000 public",
        "watch": "sass --watch public/sass/styles.scss:public/assets/css/styles.css",
        "dev": "concurrently --kill-others \"npm run watch\" \"npm run serve\"",
        "start": "node server.js"
    },
    "main": "server.js",
    "dependencies": {
        "body-parser": "^1.15.0",
        "compression": "^1.0.11",
        "cookie-parser": "^1.4.1",
        "express": "^4.13.4",
        "longjohn": "^0.2.11",
        "method-override": "^2.3.5",
        "morgan": "^1.3.0"
    },
    "author": "Martin J. Wolf",
    "license": "THE_YOU_HAVE_TOTAL_FREEDOM_LICENSE",
    "devDependencies": {
        "concurrently": "^5.3.0"
    }
}
